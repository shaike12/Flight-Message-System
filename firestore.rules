rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to users collection for authenticated users
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow read access to cities, templates, flightRoutes for authenticated users
    match /cities/{document} {
      allow read: if request.auth != null;
    }
    
    match /templates/{document} {
      allow read: if request.auth != null;
    }
    
    match /flightRoutes/{document} {
      allow read: if request.auth != null;
    }
    
    match /customVariables/{document} {
      allow read: if request.auth != null;
    }
    
    // Allow read/write access to sentMessages for authenticated users
    match /sentMessages/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Allow write access to smsRequests for authenticated users
    match /smsRequests/{document} {
      allow create: if request.auth != null;
      allow read, update: if request.auth != null;
    }
    
    // Allow read/write access to user management for admin users only
    match /userManagement/{document} {
      allow read, write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
